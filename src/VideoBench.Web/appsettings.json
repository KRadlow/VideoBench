    "ApiKey": "IN5vA9iE20EvttEYV3QBZO3vPUZxS0cdG5b6Uwn1iVrD9fGKwTV3RM8g"
  },
  "Authentication": {
    "Authority": "http://localhost:18080/realms/VideoBench",
